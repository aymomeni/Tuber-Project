<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutor_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs4000.tuber.TutorServicesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary_White"
        android:weightSum="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_tutor_services_immediate_request"
            android:id="@+id/ic_tutor_service_immediate_request"
            android:clickable="true"
            android:onClick="tutor_services_immediate_request"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="120dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_tutor_service_schedule_tutor"
            android:id="@+id/imageView13"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginRight="18dp"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_tutor_service_view_scheduled_requests"
            android:id="@+id/imageView14"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />

    </LinearLayout>

</RelativeLayout>
