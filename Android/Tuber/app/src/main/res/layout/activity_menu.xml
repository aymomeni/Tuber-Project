<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_White"
    android:paddingLeft="16pt"
    android:paddingRight="16pt"
    tools:context="cs4000.tuber.MenuActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary_White"
            android:orientation="vertical">

            <TextView
                android:text="CS4400"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acadClass1"
                android:padding="40dp"
                android:layout_alignTop="@+id/scrollView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/colorAccent_Blue"
                android:clickable="true"/>

            <TextView
                android:text="CS4000"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acadClass2"
                android:padding="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent_Green"
                android:clickable="true"/>

            <TextView
                android:text="Math2240"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acadClass3"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent_Orange"
                android:padding="40dp"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:text="Select Class:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelectClassText"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="+Add Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classAddText"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
