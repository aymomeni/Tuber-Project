<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutoring_request_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs4000.tuber.TutoringRequestPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tutorNameTextValue"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:text="Awaiting to be paired" />

    <TextView
        android:text="Course:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorNameTextValue"
        android:layout_alignParentStart="true"
        android:id="@+id/courseTextView"
        android:textSize="24sp"
        android:layout_marginTop="60dp" />

    <TextView
        android:text="Topic:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topicTextView"
        android:layout_below="@+id/courseTextView"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:layout_marginTop="40dp" />

    <TextView
        android:text="Date and Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topicTextView"
        android:layout_alignParentStart="true"
        android:id="@+id/dateTimeTextView"
        android:textSize="24sp"
        android:layout_marginTop="40dp" />

    <TextView
        android:text="Duration:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTimeTextView"
        android:layout_alignParentStart="true"
        android:id="@+id/durationTextView"
        android:textSize="24sp"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/courseTextView"
        android:id="@+id/courseTextValue"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/courseTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/topicTextView"
        android:id="@+id/topicTextValue"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/topicTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dateTimeTextView"
        android:id="@+id/dateTimeTextValue"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/dateTimeTextView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/red_light"
        android:layout_alignBottom="@+id/tutorNameTextValue"
        android:layout_toEndOf="@+id/tutorNameTextValue"
        android:id="@+id/statusImageView"
        android:layout_marginLeft="10dp" />

    <Button
        android:text="View Session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/sessionButton"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/durationTextvalue"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_alignStart="@+id/sessionButton"
        android:layout_alignBaseline="@+id/durationTextView" />

</RelativeLayout>
