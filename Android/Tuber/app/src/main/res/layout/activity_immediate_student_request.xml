<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_immediate_tutor_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_White"
    tools:context="cs4000.tuber.ImmediateStudentRequestActivity">


    <TextView
        android:text="   available Tutors..."
        android:background="@color/colorAccent_Blue"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scheduledRequestsTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="26sp"
        android:padding="5dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/requestsListId"
        android:cacheColorHint="@color/colorAccent_Green"
        android:background="@color/colorAccent_Green"
        android:headerDividersEnabled="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scheduledRequestsTextView"/>

    <Button
        android:text="Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Refresh_button"
        android:layout_above="@+id/requestsListId"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
