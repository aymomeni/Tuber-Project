<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_White"
    tools:context="cs4000.tuber.MenuActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            >

            <TextView
                android:text="CS4400 - Fall 2016"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary_White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acadClass1"
                android:padding="40dp"
                android:background="@color/colorAccent_BlueGreen"
                android:clickable="true"/>

            <TextView
                android:text="CS4000 - Fall 2016"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary_White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acadClass2"
                android:padding="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent_Blue"
                android:clickable="true"/>

            <TextView
                android:text="Math2240 - Fall 2016"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary_White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acadClass3"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent_Green"
                android:padding="40dp"
                android:clickable="true"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:text="@string/your_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelectClassText"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="40dp"/>

    <TextView
        android:text="@string/add_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classAddText"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="40dp"
        android:clickable="true"/>/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary_Grey">

        <Button
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="0.04"/>

        <Button
            android:text="Messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="0.04"/>

        <Button
            android:text="Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="0.04"/>

        <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_weight="0.04"/>
    </LinearLayout>

</RelativeLayout>
