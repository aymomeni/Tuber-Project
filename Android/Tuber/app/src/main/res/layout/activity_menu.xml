<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent_Blue"
    tools:context="cs4000.tuber.MenuActivity"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/tutor_services_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_menubar"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_class1"
            android:id="@+id/ic_tutor_service_schedule_tutor"
            android:layout_below="@+id/tutor_services_view"
            android:clickable="true"
            android:onClick="pic_clicked"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="30dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_class2"
            android:id="@+id/ic_class2"
            android:layout_below="@+id/ic_class1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_class3"
            android:id="@+id/ic_class3"
            android:layout_below="@+id/ic_class2"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />
    </LinearLayout>


    <TextView
        android:text="@string/add_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classAddText"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="40dp"
        android:clickable="true"/>/>

</RelativeLayout>