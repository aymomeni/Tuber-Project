<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutoring_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_White"
    tools:context="cs4000.tuber.TutoringRequests">


    <TextView
        android:text="  Scheduled Requests..."
        android:background="@color/colorAccent_Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scheduledRequestsTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:padding="5dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/requestsListId"
        android:cacheColorHint="@color/colorAccent_Green"
        android:background="@color/colorAccent_Green"
        android:headerDividersEnabled="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scheduledRequestsTextView"/>

</RelativeLayout>
