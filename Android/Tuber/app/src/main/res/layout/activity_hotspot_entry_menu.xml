<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hotspot_entry_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs4000.tuber.HotspotEntryMenuActivity"
    android:background="@layout/backrepeat" >


    <android.support.v7.widget.CardView
        android:id="@+id/join_hotspot_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/colorAccent_Blue"
        app:cardElevation="6dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:text="Join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/join_hotspot_button"
                android:background="@color/cardview_light_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:onClick="join_hot_spot"
                android:textColor="@color/cardview_shadow_start_color"
                android:textSize="12sp"/>

            <TextView
                android:text="Join a local Hotspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_hotspot_text_view"
                android:layout_marginBottom="14dp"
                android:textColor="@color/accent"
                android:layout_above="@+id/join_hotspot_button"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/create_hotspot_card"
        app:cardBackgroundColor="@color/colorAccent_Green"
        app:cardElevation="6dp"
        android:layout_above="@id/join_hotspot_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <Switch
                android:text="Create Personal Hotspot  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_hotspot_switch"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
