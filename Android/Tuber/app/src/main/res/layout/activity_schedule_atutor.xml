<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule_atutor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="cs4000.tuber.ScheduleATutor">

    <TextView
        android:text="Topic:   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/topicTextView"
        android:textColor="@color/textColorWhileBG"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        android:ems="10"
        android:id="@+id/topiceditText"
        android:layout_alignBaseline="@+id/topicTextView"
        android:layout_alignBottom="@+id/topicTextView"
        android:layout_toEndOf="@+id/topicTextView"
        android:textColor="@color/textColorWhileBG"
        android:background="@drawable/back"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp" />



    <TextView
        android:text="Pick a Date:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topiceditText"
        android:layout_alignParentStart="true"
        android:id="@+id/DTtextView"
        android:textColor="@color/textColorWhileBG"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calendar"
        android:id="@+id/imageButton"
        android:background="@color/white"
        android:layout_below="@+id/DTtextView"
        android:layout_alignParentEnd="true"
        android:onClick="showDatePickerDialog"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateEditText"
        android:layout_below="@+id/DTtextView"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"
        android:textSize="24sp"
        android:padding="10sp"
        android:bufferType="editable"
        android:textColor="@color/textColorWhileBG"/>

    <TextView
        android:text="Pick a Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/dateEditText"
        android:id="@+id/timeTextView"
        android:textColor="@color/textColorWhileBG"
        android:textSize="24sp"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clock"
        android:layout_below="@+id/timeTextView"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButton3"
        android:background="@color/white"
        android:onClick="showTimePickerDialog"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/timeEditText"
        android:layout_below="@+id/timeTextView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/back"
        android:textSize="24sp"
        android:textColor="@color/textColorWhileBG"
        android:layout_toLeftOf="@+id/imageButton3" />

    <TextView
        android:text="Duration:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:id="@+id/durationTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:textColor="@color/textColorWhileBG"/>

    <cs4000.tuber.NumberPicker
        android:id="@+id/np"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:text="SUBMIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:padding="15dp" />

</RelativeLayout>
