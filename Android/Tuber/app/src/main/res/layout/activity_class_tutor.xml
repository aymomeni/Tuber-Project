<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_class_tutor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs4000.tuber.ClassTutorActivity"
    android:background="@color/colorPrimary_White">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary_White"
        android:weightSum="1"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <ImageView
            android:src="@drawable/ic_offer_tutor"
            android:id="@+id/classViewElement5"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/classViewElement4"
            android:clickable="true"
            android:onClick="class_option_offerToTutor_clicked"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:src="@drawable/ic_study_hotspot"
            android:id="@+id/classViewElement2"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/classViewElement1"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:src="@drawable/ic_discussion_forum"
            android:id="@+id/classViewElement3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/classViewElement2"
            android:layout_marginBottom="10dp" />


        <ImageView
            android:src="@drawable/ic_message"
            android:id="@+id/classViewElement4"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/classViewElement3"
            android:onClick="class_option_class_option_messageing_clicked"
            />

    </LinearLayout>



    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:src="@drawable/ic_tutor"-->
    <!--android:id="@+id/imageView21"/>-->

</RelativeLayout>

